<metal:main use-macro="load: document.pt">

	<div metal:fill-slot="menu_extension">
		<form id="" class="navbar-search pull-right" action="/search" method="POST">
			<input class="search-query span2" type="text" placeholder="find..." name="query" value="">
		</form>
	</div>

	<div id="" class="container" metal:fill-slot="content">
		<div id="" class="row" tal:condition="exists:item">
			<div class="preview thumbnail">
				<h3><a href="#" tal:content="item.name">Name</a></h3>
			</div>
			<div class="info well">
				<ul class="data">
					<li><i class="icon-user"></i> <span tal:content="item.summary"></span></li>
				</ul>
				<span tal:repeat="tag item" class="label label-info tag">
					<i class="icon-tag"></i> <span tal:content="tag"></span>
				</span>
			</div>
		</div>
	</div>

</metal:main>