<metal:main use-macro="load: document.pt">

	<div metal:fill-slot="menu_extension" tal:condition="exists:query">
		<form id="" class="navbar-search pull-right" action="/search" method="POST">
			<input class="search-query span2" type="text" placeholder="find..." name="query" value="${query}">
		</form>
	</div>

	<div id="results" class="container" metal:fill-slot="content" tal:condition="exists:query">
		<div class="well" id="results-search-form">
			<div class="offset2">
				<form id="profs-serach-form" class="form-horizontal medium" action="/search" method="POST">
					<fieldset>
						<div class="control-group">
							<label for="find-profs" class="control-label"><span class="badge badge-info" tal:content="len(results)">0</span> results found for </label>
							<div class="controls">
								<div class="input-append">
									<input id="find-profs" class="" type="text" size="40" name="query" value="${query}">
									<button class="btn btn-primary" type="button"><i class="icon-search"></i> Search</button>
								</div>
							</div>
						</div>
					</fieldset>
				</form>
			</div>
		</div>

		<div class="row-fluid">
			<div id="refine-bar" class="span3">
				<ul class="nav nav-list">
					<li class="nav-header"><i class="icon-flag"></i>Filter by country</li>
					<li><a href="#">UK</a></li>
					<li><a href="#">Germany</a></li>

					<li class="nav-header"><i class="icon-book"></i>Filter by field of study</li>
					<li><a href="#">Computer Science</a></li>
					<li><a href="#">Physics</a></li>

					<li class="divider"></li>
					<li><a href="#"><i class="icon-filter"></i>Clear filters</a></li>
				</ul>
			</div>
			<div class="span9">

				<div tal:condition="not results" class="" id="no-results">
					<p class="lead">Your search - <strong tal:content="query"></strong> - did not return any results.</p>
					<p>
						Suggestions:
						<ul>
							<li>Make sure verything is spelled correctly</li>
							<li>Try a similar search with different keywords</li>
							<li>Use fewer keywords</li>
						</ul>
					</p>
				</div>

				<div id="results-list" class="row" tal:condition="exists:results">
					
					<section tal:repeat="item results">
  						<div class="preview thumbnail">
							<h3 tal:define="url request.route_url('details', slug=item._id)">
								<a href="${url}" tal:content="item.name">Name</a>
							</h3>
						</div>
						<div class="info well">
							<ul class="data">
								<li><i class="icon-user"></i> <span tal:content="item.summary"></span></li>
							</ul>
							<span tal:repeat="tag item" class="label label-info tag">
								<i class="icon-tag"></i> <span tal:content="tag"></span>
							</span>
						</div>
					</section>

				</div>

				<div id="results-pagination" class="pagination pagination-centered">
					<ul>
						<li><a href="#">Prev</a></li>
						<li class="active">
							<a href="#">1</a>
						</li>
						<li><a href="#">2</a></li>
						<li><a href="#">3</a></li>
						<li><a href="#">4</a></li>
						<li><a href="#">Next</a></li>
					</ul>
				</div>

			</div>
		</div>
	</div>

</metal:main>